extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 PORTFOLIO

      p.lead.text-light
        | See my works below. All their back-end and front-end parts were completely done by me. 
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3(class="animated fadeInUp delay-1s")

      each project in projects
        .cell
          a(href=`project/${project.id}`)
            img.thumbnail(src=`/static/img/proj0${project.id}_main.png`)
            h5= project.project_name

      
